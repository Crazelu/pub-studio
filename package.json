{
  "name": "pub-studio",
  "displayName": "PUB STUDIO",
  "description": "Manage your flutter/dart packages directly from the editor. Quickly find, install, update, or remove packages without touching the command line.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pub-studio.openFlutterPackageManager"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pub-studio.viewDependencyReadme",
        "title": "View Dependency README"
      },
      {
        "command": "pub-studio.installAllDependencies",
        "title": "Install All Dependencies"
      },
      {
        "command": "pub-studio.addDependency",
        "title": "Add Dependency"
      },
      {
        "command": "pub-studio.addDevDependency",
        "title": "Add Dev Dependency"
      },
      {
        "command": "pub-studio.updateDependency",
        "title": "Update Dependency"
      },
      {
        "command": "pub-studio.removeDependency",
        "title": "Remove Dependency"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutterPackageManager",
          "title": "Pub Studio",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "flutterPackageManager": [
        {
          "id": "scriptsView",
          "name": "Scripts",
          "icon": "images/scripts.png"
        },
        {
          "id": "actionsView",
          "name": "Actions",
          "icon": "images/actions.png"
        },
        {
          "id": "dependenciesView",
          "name": "Dependencies",
          "icon": "images/dependencies.png"
        },
        {
          "id": "devDependenciesView",
          "name": "Dev Dependencies",
          "icon": "images/dev_dependencies.png"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "pub-studio.updateDependency",
          "when": "viewItem == dependency",
          "group": "1_modification"
        },
        {
          "command": "pub-studio.removeDependency",
          "when": "viewItem == dependency",
          "group": "2_modification"
        },
        {
          "command": "pub-studio.updateDependency",
          "when": "viewItem == devDependency",
          "group": "1_modification"
        },
        {
          "command": "pub-studio.removeDependency",
          "when": "viewItem == devDependency",
          "group": "2_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "yaml": "^2.4.3"
  }
}